<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/AbtMeScrn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="About Me"
                android:textSize="35dp"
                android:textStyle="bold" />


<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2">
    >

    <TextView
        android:id="@+id/profileName"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="name"
        android:textSize="25dp" />

    <Button
        android:id="@+id/buttonEditName"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/ic_baseline_create_24"
         />

</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2">

    <TextView
        android:id="@+id/profileBirth"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:text="birth"/>

    <Button
        android:id="@+id/buttonEditBirthday"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/ic_baseline_create_24"
        />
</TableRow>

<TableRow

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2">
    >
    <TextView
        android:id="@+id/profilePhone"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:textSize="25dp"
        android:text="phone" />


    <Button
        android:id="@+id/buttonEditPhone"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/ic_baseline_create_24"
        />


</TableRow>



     <TableRow
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:weightSum="2">
         <TextView
             android:id="@+id/profileEmail"
             android:layout_width="350dp"
             android:layout_height="50dp"
             android:layout_marginTop="50dp"
             android:layout_marginLeft="30dp"
             android:textSize="25dp"
             android:text="em" />


         <Button
             android:id="@+id/buttonEditEmail"
             style="?android:attr/borderlessButtonStyle"
             android:layout_width="30dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="1dp"
             android:layout_marginBottom="1dp"
             android:background="@drawable/ic_baseline_create_24"
             />


     </TableRow>

        <TextView
            android:id="@+id/btnLog_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/log_out"
            android:textSize="20dp" />

        <!--            android:onClick="navigateLogOut"-->


    </LinearLayout>
</ScrollView>
